  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Web Server",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "buildFlags": [
        "-tags",
        "fts5 development",
      ],
      "program": "${workspaceFolder}",
      "env": {
        "VERSION": "1.0",
      },
      "args": [
        "--address",
        "0.0.0.0:9443",
      ],
    },
    {
      "name": "Launch Web Server (empty database)",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "buildFlags": [
        "-tags",
        "fts5 development",
      ],
      "program": "${workspaceFolder}",
      "env": {
        "VERSION": "1.0",
      },
      "args": [
        "--address",
        "0.0.0.0:8443",
        "--db-filename",
        "empty.db"
      ],
    }
  ]
}
