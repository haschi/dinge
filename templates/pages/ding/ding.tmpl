{{define "title"}}Ding Details{{end}}
{{define "content"}}
<section>
  <form action="/{{.Id}}" method="post">

    <div>
      <label for="name-input">Name</label>
      <input id="input-name" type="text" name="name" value="{{.Form.Name}}" autocomplete="off" autofocus>
      {{with .ValidationErrors.name}}
      <p class="error">{{.}}</p>
      {{end}}
    </div>

    <div>
      <label for="input-code">Code</label>
      <input id="input-code" type="text" name="code" value="{{.Form.Code}}" required readonly />
    </div>
    <div>
      <label for="input_anzahl">Anzahl</label>
      <input id="input_anzahl" type="number" name="anzahl" value="{{.Form.Anzahl}}" required readonly />
    </div>
    <button type="submit">Aktualisieren</button>
  </form>
</section>
{{end}}
