{{define "header"}}{{end}}
{{define "content"}}
<article>

  <h1>{{.FormValues.Name}}</h1>

  <figure>
    <img src="{{.FormValues.PhotoUrl}}" alt="">
  </figure>

  <dl itemscope itemtype="https://schema.org/Thing">
    <div>
      <dt>Name</dt>
      <dt>Der genaue Namen des Dings</dt>
      <dd itemprop="name">{{.FormValues.Name}}</dd>
    </div>

    <div>
      <dt>Allgemeiner Name</dt>
      <dd itemprop="alternateName">
        <a href="/dinge?q={{.FormValues.Allgemein}}">{{.FormValues.Allgemein}}</a>
      </dd>
    </div>

    <div>
      <dt>Anzahl</dt>
      <dt>Die Anzahl dieser Dinge, die du besitzt</dt>
      <dd itemprop="description">{{.FormValues.Anzahl}}</dd>
    </div>

    <dt>Nach ein Label</dt>
    <dd>Ein Wert</dd>
  </dl>

  <details>
    <summary>Beschreibung</summary>
    <pre>{{.FormValues.Beschreibung}}</pre>
  </details>

  <footer>
    <nav>
      <menu>
        <li>
          <a href="/dinge/{{.FormValues.Id}}/edit"><b>Bearbeiten</b></a>
        </li>
        <li>
          <b>
            <a href="/dinge/{{.FormValues.Id}}/photo"><i>Foto Bearbeiten</i></a>
          </b>
        </li>
        <li>
          <a href="/dinge/{{.FormValues.Id}}"><i>Einlagern</i></a>
        </li>
        <li>
          <a href="/dinge/{{.FormValues.Id}}"><i>Entnehmen</i></a>
        </li>
      </menu>
    </nav>
  </footer>
</article>
<article>
  <h2>Letzte Änderungen</h2>
  <table>
    <thead>
      <tr>
        <th>Datum</th>
        <th>Uhrzeit</th>
        <th>Handlung</th>
        <th>Menge</th>
      </tr>
    </thead>
    <tbody>
      {{range .FormValues.History}}
      <tr>
        <!-- Siehe https://pkg.go.dev/time#pkg-constants:
        "Only these values are recognized" bedeuted: Tag = 02, Monat = 01, Stunde = 15 und Minut = 04!
        TODO: Das Format ist abhängig von den Benutzereinstellungen.
        -->
        <td>{{.Created.Format "02.01.2006"}}</td>
        <td>{{.Created.Format "15:04"}}</td>
        <td>
          {{if eq .Operation 1 2}}
          Eingelagert
          {{else}}
          Entnommen
          {{end}}
        </td>
        <td>{{.Anzahl}}</td>
      </tr>
      {{end}}
    </tbody>
  </table>
</article>
{{end}}
